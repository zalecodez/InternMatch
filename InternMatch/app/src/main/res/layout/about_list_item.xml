        android:textSize="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_about_item_detail"
        tools:text="detailsdetailsdetailsdetails"
        />

</LinearLayout>